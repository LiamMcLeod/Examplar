main.bg-light
    .container-fluid
        .contentContainer.text-left
            .test-ad
                //ToDo Placeholders
                .col-sm-12.wide-only
                    img(src="https://storage.googleapis.com/support-kms-prod/SNP_59D432450939ECC60A21BEDBEE985B1817B1_3094744_en_v2")
                .col-sm-offset-2.col-sm-6.desktop-only
                    img(src="https://storage.googleapis.com/support-kms-prod/SNP_4FF3B90F1F322E328CE191157454F07699AB_2922296_en_v3")
                .col-sm-12.wire.no-desktop.no-wide
                    span iPhone Ad
            .user
                if !loggedIn
                    form(action="/api/login" method="POST" )
                        .panel.panel-default
                            .panel-heading.text-center.textmuted Log In
                            .panel-body.text-center
                                .row
                                    .col-sm-6
                                        label Username:
                                        br
                                        input#email(type="username" name="username" title="username" autofocus required)
                                    .col-sm-6
                                        label Password:
                                        br
                                        input#password(type="password" name="password" title="password" required)
                                if status != 'Success!'
                                    span.text-danger #{status}
                            .panel-footer
                                .row
                                    .col-xs-6.text-left
                                        input(type="checkbox" name="remember")
                                        span &nbsp;Remember?
                                    .col-xs-6.text-right
                                        input.btn.btn-default(type="submit" value="Submit")
                else
                    if status != 'Success!'
                        .row
                    else
                        #login-status.row.jumbotron.text-success.alert-success.border-success.text-center(onclick="toggleHide(this)")
                            h2.text-success #{status}
                    .row
                        .col-sm-12
                            span To your&nbsp;
                                a(href="u/#{username}") profile
                    .row
                        form#edit-user(action="/api/edit/user" method="POST" )
                            .col-xs-3.user-label
                                .row
                                    label Title:&nbsp;
                                .row
                                    label First Name:
                                .row
                                    label Last Name:
                                .row
                                    label DoB:
                                .row
                                    label Username:
                                .row
                                    label Email Address
                                .row
                                    label Privileges:
                                .row
                                    label Created:
                            .col-xs-9.user-info
                                .row
                                    input.norm-toggle(type="text" value="#{title}" disabled required)
                                .row
                                    input.norm-toggle(type="text" value="#{firstName}" disabled required)
                                .row
                                    input.norm-toggle(type="text" value="#{lastName}" disabled required)
                                .row
                                    input.norm-toggle(value="#{doB}" disabled required)
                                .row
                                    input.norm-toggle(type="text" value="#{username}" disabled required)
                                .row
                                    input.mod-toggle(type="email" value="#{emailAddress}" disabled required)
                                .row
                                    input.ad-toggle(type="text" value="#{role}" disabled required)
                                .row
                                    input(value="#{created}" disabled)
                    .row.text-center
                        .col-sm-2.pen-icon
                            a(onclick="toggleDisable('#{role}')").fa.fa-2x.fa-check.fa-edit