main.bg-light
    .container-fluid
        .contentContainer.text-left
            .test-ad
                //ToDo Placeholders
                .col-sm-12.wide-only
                    img(src="https://storage.googleapis.com/support-kms-prod/SNP_59D432450939ECC60A21BEDBEE985B1817B1_3094744_en_v2")
                .col-sm-offset-2.col-sm-6.desktop-only
                    img(src="https://storage.googleapis.com/support-kms-prod/SNP_4FF3B90F1F322E328CE191157454F07699AB_2922296_en_v3")
                .col-sm-12.wire.no-desktop.no-wide
                    span iPhone Ad
            .user
                //todo uncomment
                //if !loggedIn
                   //include notlogged
                //else
                    //todo nest this if
                if status != 'Success!'
                    .row
                else
                    #login-status.row.jumbotron.text-success.alert-success.border-success.text-center(onclick="toggleHide(this)")
                        h2.text-success #{status}
                .row
                    .notFound(v-if="noOfResults === 0 && searchFlag===1")
                        h1.text-center No Results.
                    div(v-else)
                        h1 {{paperName}}
                    .searchResult(v-if="filterTerm===''" v-for="question in questions | limitBy displayResults | orderBy sortBy sortType")
                        div
                            h4
                                a(href="../result?id={{question.QuestionId}}") {{question.QuestionNumber}} - {{question.ExamBoardName}} {{question.ExamPaperSeason}} {{question.ExamPaperDate}}
                        p {{{ question.QuestionText }}}
                    .searchResult(v-if="filterTerm!=''" v-for="question in questions  | limitBy displayResults | orderBy sortBy sortType | filterBy filterTerm in filterBy")
                        div
                            h4
                                a(href="../result?id={{question.QuestionId}}") {{question.QuestionNumber}} - {{question.ExamBoardName}} {{question.ExamPaperSeason}} {{question.ExamPaperDate}}
                        p {{{ question.QuestionText }}}
