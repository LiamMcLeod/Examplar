    body#page-top
        #wrapper
            nav.navbar.navbar-fixed-alt.navbar-trans
                .container-fluid
                    // Header
                    .navbar-header
                        a.no-tablet.no-mobile.navbar-brand.pull-left(href='#')
                            span.no-tablet.no-mobile Examplar
                        a.navbar-brand.pull-left.no-desktop.no-wide(href='#' onClick="toggleMenu()")
