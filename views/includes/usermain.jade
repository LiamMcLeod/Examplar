main.bg-light
    .container-fluid
        .contentContainer.text-left
            .test-ad
                //ToDo Placeholders
                .col-sm-12.wide-only
                    img(src="https://storage.googleapis.com/support-kms-prod/SNP_59D432450939ECC60A21BEDBEE985B1817B1_3094744_en_v2")
                .col-sm-offset-2.col-sm-6.desktop-only
                    img(src="https://storage.googleapis.com/support-kms-prod/SNP_4FF3B90F1F322E328CE191157454F07699AB_2922296_en_v3")
                .col-sm-12.wire.no-desktop.no-wide
                    span iPhone Ad
            .user
                if !loggedIn
                    form(action="/api/login" method="POST" )
                        .panel.panel-default
                            .panel-heading.text-center.textmuted Log In
                            .panel-body.text-center
                                .row
                                    .col-sm-6
                                        label Username:
                                        br
                                        input#email(type="username" name="username" title="username" autofocus required)
                                    .col-sm-6
                                        label Password:
                                        br
                                        input#password(type="password" name="password" title="password" required)
                                if status != 'Success!'
                                    span.text-danger #{status}
                            .panel-footer
                                .row
                                    .col-xs-6.text-left
                                        input(type="checkbox" name="remember")
                                        span &nbsp;Remember?
                                    .col-xs-6.text-right
                                        input.btn.btn-default(type="submit" value="Submit")
                else
                    h1 Hello #{username}